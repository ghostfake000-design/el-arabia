{
  "name": "el-arabia",
  "version": "4.0.0",
  "description": "Al-Arabia Inventory System",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build && electron-builder --win",
    "build:win": "vite build && electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "electron-store": "^8.1.0",
    "xlsx": "0.18.5"
  },
  "build": {
    "appId": "com.elnoamany.al-arabia.inventory",
    "productName": "Al-Arabia-Inventory-Pro",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "index.html",
      "electron-api.js"
    ],
    "extraResources": [
      "worker.js",
      "db.js",
      "sql-wasm.wasm",
      "data/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "certificateFile": "elnoamany.pfx",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}